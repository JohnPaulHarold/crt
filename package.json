{
	"name": "crt-monorepo",
	"private": true,
	"description": "A simple UI lib for low spec TV devices.",
	"type": "module",
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"dev": "npm run build -w @johnpaulharold/crt && npm run dev -w example",
		"docs:generate": "typedoc",
		"docs:view": "npm run docs:generate && open docs/index.html",
		"build": "npm run build --workspaces --if-present",
		"build:example": "npm run build -w example",
		"nuke": "node scripts/nuke.js",
		"serve:ssr": "npm run build && cd packages/example && node --loader ./loader.js server.js",
		"test": "npm run build && vitest run",
		"test:watch": "npm run build && vitest watch",
		"coverage": "vitest run --coverage",
		"lint:js": "eslint .",
		"lint:prettier": "prettier --write .",
		"typecheck": "tsc -b",
		"validate": "npm run typecheck && npm run build && vitest run && npm run lint:js && npm run lint:prettier",
		"release": "node scripts/release.js"
	},
	"devDependencies": {
		"@babel/cli": "^7.24.7",
		"@babel/core": "^7.24.7",
		"@babel/preset-env": "^7.24.7",
		"@babel/preset-typescript": "^7.24.7",
		"@eslint/js": "^9.5.0",
		"@rollup/plugin-terser": "^0.4.4",
		"@types/express": "^4.17.21",
		"@vitest/coverage-v8": "^3.2.4",
		"eslint": "^9.34.0",
		"express": "^5.1.0",
		"globals": "^16.3.0",
		"jsdom": "^26.1.0",
		"prettier": "^3.3.2",
		"typedoc": "^0.28.11",
		"typescript": "^5.4.5",
		"typescript-eslint": "^8.46.3",
		"vitest": "^3.2.4"
	},
	"engines": {
		"npm": ">=10.9.2",
		"node": ">=22.13.0"
	}
}
