{
	"name": "crt-monorepo",
	"private": true,
	"description": "A simple UI lib for low spec TV devices.",
	"type": "module",
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"dev": "npm run build -w crt && npm run dev -w example",
		"docs:generate": "typedoc",
		"docs:view": "npm run docs:generate && open docs/index.html",
		"build": "npm run build -w crt",
		"build:example": "npm run build -w example",
		"nuke": "node scripts/nuke.js",
		"test": "npm run build && vitest run",
		"test:watch": "npm run build && vitest watch",
		"coverage": "vitest run --coverage",
		"lint:js": "eslint .",
		"lint:prettier": "prettier --write .",
		"typecheck": "npm run build && tsc -b"
	},
	"devDependencies": {
		"@babel/cli": "^7.24.7",
		"@babel/core": "^7.24.7",
		"@babel/preset-env": "^7.24.7",
		"@eslint/js": "^9.5.0",
		"@vitest/coverage-v8": "^3.2.4",
		"eslint": "^9.34.0",
		"globals": "^16.3.0",
		"jsdom": "^26.1.0",
		"prettier": "^3.3.2",
		"typedoc": "^0.28.11",
		"typescript": "^5.4.5",
		"vitest": "^3.2.4"
	},
	"engines": {
		"npm": ">=10.9.2",
		"node": ">=22.13.0"
	}
}
